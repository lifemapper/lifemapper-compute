#!/bin/bash 
#
# Add scripts for scheduled tasks to cron.daily directory. 
# Called by initLMcompute.
#
usage () 
{
    echo "Usage: $0"
    echo "This script copies maintenance scripts in @LMHOME@/rocks/bin/ " 
    echo "to the cron.daily directory and sets execute permissions."
}

### define varibles
setDefaults () {
    # script to seed layers
    CRON_DIR=/etc/cron.daily/
    LOG=/tmp/`/bin/basename $0`.log
    touch $LOG
}

TimeStamp () {
    echo $1 `/bin/date` >> $LOG
}

# install cron jobs
installDailyTasks () {
    # install only on frontend, no need for compute nodes
    name1=`hostname`
    name2=`/opt/rocks/bin/rocks list host attr localhost | grep Kickstart_PublicHostname | awk '{print $3}'`
    if [ "$name1" == "$name2" ] ; then
        install @LMHOME@/rocks/bin/lm_aggregate_logs.cron  ${CRON_DIR}
        install @LMHOME@/rocks/bin/lm_cleanup_jobs.cron  ${CRON_DIR}
        install @LMHOME@/rocks/bin/lm_free_memory.cron  ${CRON_DIR}
        echo "Installed tasks in ${CRON_DIR} on frontend ..." | tee -a $LOG
    fi
}

#### Main ####
if [ $# -ne 0 ]; then
    usage
    exit 0
fi 

setDefaults
TimeStamp "# Start"
installDailyTasks
TimeStamp "# End"
